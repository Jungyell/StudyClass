@ECHO off
// 화면 출력 비활성화

GOTO start
// start로 이동

:find_dp0
// find_dp0 레이블

SET dp0=%~dp0
// dp0에 스크립트 경로 저장

EXIT /b
// 서브루틴 종료

:start
// start 레이블

SETLOCAL
// 지역 변수 설정

CALL :find_dp0
// find_dp0 호출

IF EXIST "%dp0%\node.exe" (
// node.exe 존재 확인

  SET "_prog=%dp0%\node.exe"
// _prog에 node.exe 경로 저장

) ELSE (
// node.exe 없으면

  SET "_prog=node"
// _prog에 node 저장

  SET PATHEXT=%PATHEXT:;.JS;=;%
// PATHEXT에서 .JS 제거

)

endLocal & goto #_undefined_# 2>NUL || title %COMSPEC% & "%_prog%"  "%dp0%\..\nodemon\bin\nodemon.js" %*
// endLocal, #_undefined_#로 이동 시도 (실패 예상), title 설정, _prog 실행, nodemon.js 실행
// %*는 모든 인수 전달
