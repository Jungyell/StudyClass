#!/bin/sh  // 셸 스크립트 실행을 지정

basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")  // 현재 스크립트의 디렉터리를 basedir 변수에 저장

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;  // CYGWIN, MINGW, MSYS 환경에서는 Windows 경로 형식으로 변환
esac

if [ -x "$basedir/node" ]; then  // basedir 경로에 실행 가능한 node 파일이 있는지 확인
  exec "$basedir/node"  "$basedir/../js-beautify/js/bin/html-beautify.js" "$@"  // node 파일이 있으면 해당 경로에서 html-beautify.js 스크립트 실행
else 
  exec node  "$basedir/../js-beautify/js/bin/html-beautify.js" "$@"  // node 파일이 없으면 시스템 경로에서 node 명령어로 html-beautify.js 스크립트 실행
fi
