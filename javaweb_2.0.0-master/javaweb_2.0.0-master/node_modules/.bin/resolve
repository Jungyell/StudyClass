#!/bin/sh
// 쉘 스크립트 사용

basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')") 
// 스크립트가 위치한 디렉토리 경로를 얻어옴. Windows 스타일 경로를 Unix 스타일로 변환

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
    // Cygwin, MinGW, MSYS 환경에서는 디렉토리 경로를 Windows 스타일로 변환
esac

if [ -x "$basedir/node" ]; then
    // 디렉토리에 node 실행 파일이 있는지 확인
  exec "$basedir/node"  "$basedir/../resolve/bin/resolve" "$@"
  // 있으면 해당 파일을 사용하여 resolve 실행
else 
  exec node  "$basedir/../resolve/bin/resolve" "$@"
  // 없으면 기본적으로 node를 사용하여 resolve 실행
fi
