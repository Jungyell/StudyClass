#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")  // 현재 스크립트 파일의 디렉터리 경로 설정

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;  // Windows 관련 환경 설정
esac

if [ -x "$basedir/node" ]; then  // 경로에 node 실행 파일이 있는지 확인
  exec "$basedir/node"  "$basedir/../editorconfig/bin/editorconfig" "$@"  // 해당 경로의 node로 editorconfig 실행
else 
  exec node  "$basedir/../editorconfig/bin/editorconfig" "$@"  // 시스템의 node로 editorconfig 실행
fi
