#!/bin/sh
// 쉘 스크립트 사용

basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")
// 스크립트 경로를 Unix 형식으로 변환하여 basedir 변수에 저장

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac
// Cygwin, MinGW, MSYS 환경에서 경로를 Windows 형식으로 변환

if [ -x "$basedir/node" ]; then
// 경로에 node 실행 파일이 있는지 확인

  exec "$basedir/node"  "$basedir/../nopt/bin/nopt.js" "$@"
// node 실행 파일이 있으면 해당 파일을 사용하여 nopt.js 실행

else 
  exec node  "$basedir/../nopt/bin/nopt.js" "$@"
// 없으면 기본 node 명령어를 사용하여 nopt.js 실행
fi
