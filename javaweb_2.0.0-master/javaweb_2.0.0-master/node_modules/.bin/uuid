#!/bin/sh
// 셸 스크립트 시작

basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')") 
// 현재 스크립트 파일이 있는 디렉토리 경로 설정

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
    // 환경에 따라 디렉토리 경로를 Windows 스타일로 변환
esac

if [ -x "$basedir/node" ]; then
// basedir 디렉토리에 node 실행 파일이 있는지 확인

  exec "$basedir/node"  "$basedir/../uuid/dist/bin/uuid" "$@"
  // 있으면 해당 node를 사용하여 UUID 실행

else 
  exec node  "$basedir/../uuid/dist/bin/uuid" "$@"
  // 없으면 시스템의 기본 node를 사용하여 UUID 실행
fi
